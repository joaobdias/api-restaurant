{
    "compilerOptions": {
        // defining patterns to our typescript/javascript project
        "target": "ES2022",
        "lib": ["ES2023"],

        "paths": {
            "@/*": ["./src/*"] // alias to path src
        },

        "module": "node16",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        
        "strict": true,
        "skipLibCheck": true
    }
}